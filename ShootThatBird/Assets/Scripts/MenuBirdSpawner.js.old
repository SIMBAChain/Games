var spawn : boolean;
var bird : GameObject;
var timer : float;
var spawnGap : float;
var maxTime : float;


function Update () {
	timer += Time.deltaTime;
	if(timer >= maxTime){
		timer = 0;
		maxTime = spawnGap += Random.Range(-2.0,2.0);
		Spawn();
	}
}

function Spawn () {
	transform.position.x = Random.Range(-35.0,-21.0);
	transform.position.y = Random.Range(15.0,-5.0);
	Instantiate(bird, transform.position, transform.rotation);
}